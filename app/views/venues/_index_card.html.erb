<div class="card-trip">
  <% if venue.images.attached? %>
    <%= cl_image_tag venue.images.first.key %>
  <% else %>
    <%= image_tag("backdrop.jpg") %>
  <% end %>

  <div class="card-trip-infos">
    <div style="flex-grow: 1;">
      <h3><%= venue.name %></h3>
      <h5 class="special"><%= venue.borough %></h5>
      <p class="pt-2 mb-2"><%= venue.description %></p>
      <p><%= venue.opening_time.strftime("%I:%M %p") %> - <%= venue.closing_time.strftime("%I:%M %p") %></p>
    </div>

    <div style="width: 105px;">
      <% if venue.logo.attached? %>
        <%= cl_image_tag venue.logo.key, class: "logo" %>
      <% else %>
        <%= image_tag("venue_default_avatar.png", class: "logo") %>
      <% end %>
    </div>
  </div>
  <div class="d-flex justify-content-between mr-4 mb-2 align-items-center">
<div class="btn-area">
<a href="<%= venue_path(venue) %>" class="w-100 btn-green">See More</a>
</div>
  <h4 class="special">
    <% sport = venue.sports.downcase %>

    <% if sport == "padel" %>
      <h4>padel<%= image_tag(asset_path("padel.svg"), class: "sport-icon") %></h4>

    <% elsif sport == "tennis" %>
      <h4>tennis<%= image_tag(asset_path("tennis.svg"), class: "sport-icon") %></h4>

    <% elsif sport == "badminton" %>
      <h4>badminton<%= image_tag(asset_path("badminton.svg"), class: "sport-icon") %></h4>

    <% elsif sport == "football" %>
      <h4>football<%= image_tag(asset_path("handball.svg"), class: "sport-icon") %></h4>

    <% elsif sport == "quidditch" %>
      <%= image_tag(asset_path("quidditch.svg"), class: "sport-icon") %>

    <% elsif sport == "basketball" %>
      <%= image_tag(asset_path("basketball.svg"), class: "sport-icon") %>

    <% else %>
      <%= venue.sports %>
    <% end %>
  </h4>
</div>
</div>
