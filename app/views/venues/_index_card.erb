

<div class="card-trip">
 <% if venue.image.attached? %>
    <%= cl_image_tag venue.image.key %>
             <% else %>
               <%= image_tag("backdrop.jpg") %>
    <% end %>
  <div class="card-trip-infos">
    <div>
      <h2><%= venue.name %></h2>
      <p><%= venue.description %></p>
    </div>
     <% if venue.photo.attached? %>
    <%= cl_image_tag venue.photo.key,class: "card-trip-user avatar-bordered" %>
            <% else %>
               <%= image_tag("venue_default_avatar.png",class: "card-trip-user avatar-bordered") %>
     <% end%>

  </div>
</div>
