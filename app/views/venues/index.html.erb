<%= link_to root_path do %>
  <i class="fa-solid fa-arrow-left"></i>
  Back
  <% end %>
<div class="venue-page-container" data-controller="filters">
  <div data-controller="popup">
    <div class="container pt-3">
      <div class="search-bar">
        <i class="fa-solid fa-filter fa-xl" style="color: #163916;" data-action="click->filters#openOverlay"></i>
      </div>

      <div class="overlay d-none d-flex flex-column" data-filters-target="overlay">
        <div class="popup-content">
        <div class="container">
          <div class="pt-4 row justify-content-start align-items-center">
            <div class="col-4">
            <i class="fa-solid fa-xmark close-btn fa-2xl" data-action="click->filters#closeOverlay"></i>
            </div>
            <div class="col-4 text-center">
              <h1>Filters</h1>
            </div>
          </div>
          </div>
          <form class="mt-3 container-fluid">
              <h4 class="pb-2">SPORTS</h4>
              <div class="form-check pt-1 pb-1 d-flex justify-content-between">
                  <label for="padel">Padel 👟</label>
                  <input id="padel" type="checkbox" class="form-check-input" data-filters-target="tick padelFilterElement">
              </div>
              <div class="form-check pt-1 pb-1 d-flex justify-content-between">
                  <label for="basketball">Basketball 🏀</label>
                  <input id="basketball" type="checkbox" class="form-check-input" data-filters-target="tick basketballFilterElement">
              </div>
              <div class="form-check pt-1 pb-1 d-flex justify-content-between">
                  <label for="tennis">Tennis 🎾</label>
                  <input id="tennis" type="checkbox" class="form-check-input" data-filters-target="tick tennisFilterElement">
              </div>
              <div class="form-check pt-1 pb-1 d-flex justify-content-between">
                  <label for="football">Football ⚽️</label>
                  <input id="football" type="checkbox" class="form-check-input" data-filters-target="tick footballFilterElement">
              </div>
              <div class="form-check pt-1 pb-1 d-flex justify-content-between">
                  <label for="netball">Netball 🥅</label>
                  <input id="netball" type="checkbox" class="form-check-input" data-filters-target="tick netballFilterElement">
              </div>
              <div class="form-check pt-1 pb-1 d-flex justify-content-between">
                  <label for="badminton">Badminton 🏸</label>
                  <input id="badminton" type="checkbox" class="form-check-input" data-filters-target="tick badmintonFilterElement">
              </div>
              <div class="form-check pt-1 pb-1 d-flex justify-content-between">
                  <label for="table_tennis">Table Tennis 🏓</label>
                  <input id="table_tennis" type="checkbox" class="form-check-input" data-filters-target="tick tableTennisFilterElement">
              </div>
              <div class="form-check pt-1 pb-1 d-flex justify-content-between">
                  <label for="quidditch">Quidditch 🧹</label>
                  <input id="quidditch" type="checkbox" class="form-check-input" data-filters-target="tick quidditchFilterElement">
              </div>
                          <h4 class="pt-3 pb-2">Price</h4>
            <div class="d-flex button-group gap-1">
              <input type="checkbox" id="facility_sport1" class="form-check-input" data-filters-target="tick checkbox price" value="£">
              <label for="facility_sport1" class="button-style">£</label><br>
              <input type="checkbox" id="facility_sport2" class="form-check-input" data-filters-target="tick checkbox price" value="££">
              <label for="facility_sport2" class="button-style">££</label><br>
              <input type="checkbox" id="facility_sport3" class="form-check-input" data-filters-target="tick checkbox price" value="£££">
              <label for="facility_sport3" class="button-style">£££</label><br>
            </div>
            <button type="button" data-action="click->filters#filterResults" class="btn-primary mt-3 w-100">Filter</button>
            <button type="button" data-action="click->filters#uncheckAll" class="btn-secondary mt-2 w-100">Clear all</button>
          </form>
          </form>



        </div>
      </div>
    </div>
  </div>

  <div class="index-content">
    <h1 class="h2 my-3 d-flex justify-content-center">Venues</h1>
    <div data-filters-target="list" data-search-venues-target="list">
      <%= render "list", venues: @venues %>
    </div>
  </div>
</div>
