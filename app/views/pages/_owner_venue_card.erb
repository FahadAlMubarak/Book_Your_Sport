<div class="card-trip">

    <div class="card-trip-infos">
  <div style= "flex-grow: 1;">
      <h2><%= venue.name %></h2>
      <h3><%= venue.borough %></h3>
      <p><%= venue.description %></p>

    </div>
    <div style="width: 105px;"></div>


     <% if venue.photo.attached? %>
    <%= cl_image_tag venue.photo.key,class: "logo"%>
            <% else %>
               <%= image_tag("venue_default_avatar.png",class: "logo") %>
     <% end%>
</div>
 <div class="about" data-controller="toggle" >
    <div class="d-flex justify-content-between align-items-center">
  <h2> About </h2>
      <button class="btn btn-outline-primary", data-action="click->toggle#toggle"> <i class="fa-solid fa-caret-down"></i> </button>
    </div>
    <div class="mt-3">
      <div data-toggle-target="togglableElement" class="d-none">
      <p> <%= venue.description %> </p>
      <div class="d-flex justify-content-between align-items-center">
        <p> Phone:<%= venue.phone %> </p>
        <i class="fa-solid fa-phone"></i>
      </div>
      <p> Email: <%= venue.email %> <i class="fa-solid fa-envelope"></i></p>
      <p> Follow us: <%= venue.socials %> <i class="fa-brands fa-instagram"></i></p>
      <div>
        <h3>Opening Times</h3>
        <p>Opening: <%= venue.opening_time.strftime(" %l:%M %p") %></p>
        <p>Closing: <%= venue.closing_time.strftime(" %l:%M %p") %></p>
      </div>
    </div>
  </div>
 </div>
