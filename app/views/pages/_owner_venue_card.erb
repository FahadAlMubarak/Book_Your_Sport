<div class="card-trip">
  <% if venue.images.attached? %>
    <%= cl_image_tag venue.images.first.key %>
  <% else %>
    <%= image_tag("backdrop.jpg") %>
  <% end %>

  <div class="card-trip-owner">
    <div style="flex-grow: 1;">
      <h3><%= venue.name %></h3>
    </div>

    <div style="width: 105px;">
      <% if venue.logo.attached? %>
        <%= cl_image_tag venue.logo.key, class: "logo" %>
      <% else %>
        <%= image_tag("venue_default_avatar.png", class: "logo") %>
      <% end %>
    </div>
  </div>

  <%= link_to "Edit venue", edit_venue_path(venue), class: "btn-primary" %>
  <%= link_to "Delete venue", venue, class: "btn-primary", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this venue?" }%>
</div>

