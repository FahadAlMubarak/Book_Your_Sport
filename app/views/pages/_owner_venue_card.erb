<div class="card-trip">
  <% if venue.images.attached? %>
    <%= cl_image_tag venue.images.first.key %>
  <% else %>
    <%= image_tag("backdrop.jpg") %>
  <% end %>

  <div class="card-trip-infos">
    <div style="flex-grow: 1;">
      <h3><%= venue.name %></h3>
    </div>

    <div style="width: 105px;">
      <% if venue.photo.attached? %>
        <%= cl_image_tag venue.photo.key, class: "logo" %>
      <% else %>
        <%= image_tag("venue_default_avatar.png", class: "logo") %>
      <% end %>
    </div>
  </div>
<div class="btn-area">
  <div class="accordion mt-5 mb-5" id="accordionExample">
  <div class="accordion-item">
    <h2 class="accordion-header">
      <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
      <h3>About</h3>
      </button>
    </h2>
    <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
      <div class="accordion-body">
              <p><%= venue.description %> </p>
      <div class="d-flex justify-content-between align-items-center">
        <p> Phone number: </p>
       <p> <%= venue.phone %></p>
        <i class="fa-solid fa-phone"></i>
      </div>
      <div class="d-flex justify-content-between align-items-center">
         <p> Email: <%= venue.email %></p>
        <i class="fa-solid fa-envelope"></i>
      </div>
    <div class="d-flex justify-content-start gap-3 mb-3 align-items-center">
    <a href="#"><i class="fab fa-instagram"></i></a>
    <a href="#"><i class="fab fa-facebook"></i></a>
        <i class="fa-brands fa-instagram"></i>
      </div>
        <h5 class="mb-2 special text-black"><strong>Opening Times</strong></h5>
        <p>Opening: <%= venue.opening_time.strftime(" %l:%M %p") %> - Closing: <%= venue.closing_time.strftime(" %l:%M %p") %></p>
           </div>
    </div>
  </div>
</div>
