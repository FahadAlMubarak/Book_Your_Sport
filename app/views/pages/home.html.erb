<div class="home-container">
  <div class="video-container">
    <video class="darken-video" playsinline autoplay muted loop poster="<%= asset_path('tennis-background.jpg') %>" id="bgvid">
      <source src="<%= asset_path('tennis.mp4') %>" type="video/mp4">
    </video>

    <div class="hero-content text-center align-items-center">
      <h1 class="text-white text-center pt-3">Game On...</h1>
      <h5 class="special text-white pb-3 text-center ">Book Your Sport, Anytime, Anywhere!</h5>
        <a class="mt-2 w-50 text-center btn-secondary special align-items-center" href="<%= venues_path %>">See all our venues</a>
    </div>
  </div>

<div class="about-us-container">
  <h2 class="pb-4">ABOUT US</h2>
  <div class="container">

    <!-- First Card -->
    <div class="row d-flex align-items-center">
      <div class="col-12">
        <div class="about-us-card p-3 d-flex">
          <div class="col-8">
            <h4 class="pb-2">Flexibility</h4>
            <div class="border-bottom-light"></div>
            <p class="pt-2">Anywhere, anytime. Whether it's football, tennis, padel, or any other sport.</p>
          </div>
          <div class="col-4 d-flex align-items-center justify-content-center">
            <i class="fa-solid fa-2xl fa-scale-unbalanced-flip"></i>
          </div>
        </div>
      </div>
    </div>

    <!-- Second Card -->
    <div class="row d-flex align-items-center">
      <div class="col-12">
        <div class="about-us-card p-3 d-flex flex-row-reverse">
          <div class="col-8">
            <h4 class="pb-2">Compare</h4>
            <div class="border-bottom-light"></div>
            <p class="pt-2">Find the perfect spot for your next game by comparing price, capacity and location.</p>
          </div>
          <div class="col-4 d-flex align-items-center justify-content-center">
            <i class="fa-solid fa-2xl fa-scale-unbalanced-flip"></i>
          </div>
        </div>
      </div>
    </div>

    <!-- Third Card -->
    <div class="row d-flex align-items-center">
      <div class="col-12">
        <div class="about-us-card p-3 d-flex">
          <div class="col-8">
            <h4 class="pb-2">Sport owners</h4>
            <div class="border-bottom-light"></div>
            <p class="pt-2">As a venue owner you can list your facilities with us and make it simpler to get more visitors!</p>
          </div>
          <div class="col-4 d-flex align-items-center justify-content-center">
            <i class="fa-solid fa-2xl fa-scale-unbalanced-flip"></i>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>



  <div class="top-list-venues mt-5 pt-3">
  <div class="container">
  <h3 class="pb-1 text-black">Some of our venues</h1>
  <p> Take a look at some of our top rated venues </p>
    <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <!-- Replace static carousel items with dynamic content -->
        <% @venues.each_with_index do |venue, index| %>
          <div class="carousel-item <%= 'active' if index == 0 %>">
            <div class="card-trip">
              <% if venue.images.attached? %>
                <%= cl_image_tag venue.images.first.key %>
              <% else %>
                <%= image_tag("backdrop.jpg") %>
              <% end %>
              <div class="card-trip-infos">
                <div style="flex-grow: 1;">
                  <h3><%= venue.name %></h3>
                  <h5 class="special"><%= venue.borough %></h5>
                  <p class="pt-2"><%= venue.description %></p>
                  <p><%= venue.sports %></p>
                  <p><%= venue.opening_time.strftime("%I:%M %p") %> - <%= venue.closing_time.strftime("%I:%M %p") %></p>
                </div>
                <div style="width: 105px;">
                  <% if venue.logo.attached? %>
                    <%= cl_image_tag venue.logo.key, class: "logo" %>
                  <% else %>
                    <%= image_tag("venue_default_avatar.png", class: "logo") %>
                  <% end %>
                </div>
              </div>
              <div class="btn-area w-100">
                <a href="<%= venue_path(venue) %>" class="w-100 btn-green">See More</a>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>
</div>
</div>
