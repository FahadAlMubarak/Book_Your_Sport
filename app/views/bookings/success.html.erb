
<div class="container text-center">
  <%= image_tag "green-tick.svg",  alt: "green tick success", class: "mt-5, mb-4" %>
  <h1>congratulations!</h1>

  <p><strong>Your booking has been confirmed. Please check your email for confirmation. </strong></p>
    <% if @booking.slots.first.facility.venue.logo.present? %>
      <%= cl_image_tag @booking.slots.first.facility.venue.logo.key, class: "checkout-logo" %>

    <% else %>
      <%= image_tag("venue_default_avatar.png", class: "checkout-logo") %>
    <% end %>

  <p class= "mt-3"> <%= @booking.slots.first.facility.name.capitalize %> at <%= @booking.slots.first.facility.venue.name %> </p>
      <div class="d-flex justify-content-center gap-2">
        <p> <i class=" mr-5 fa-solid fa-location-dot"></i></p>
        <p><%= @booking.slots.first.facility.venue.address.capitalize %> </p>
      </div>
      <div class="d-flex justify-content-center gap-2">
        <p> <i class="fa-solid fa-clock"></i></p>
         <p><%= @booking.start_time.strftime("%H:%M") %> until <%= @booking.end_time.strftime("%H:%M") %></p>
      </div>

    <div class= "mt-5">
     <%= link_to 'Go to Dashboard', owner_dashboard_path,  class: 'btn-primary' if current_user.owner == true%>
    <%= link_to 'Go to Dashboard', user_dashboard_path, class: 'btn-primary' if current_user.owner == false%>
    </div>
</div>
