        </div>
        <div class="avatar">
          <a href="#" id="navbarDropdown" class="avatar" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar", alt: "dropdown menu" %>
          </a>
        </div>
      <% else %>
        <div class="dropdown">
          <button class="fas fa-bars fa-2xl nav-link dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false"></button>
          <ul class="dropdown-menu w-50 justify-content-end" aria-labelledby="dropdownMenuButton">
          <%= link_to "See all venues", venues_path, class: "nav-link" %>
          <%= link_to "Other", venues_path, class: "nav-link" %>
          </ul>
        </div>
        <div class="login-button">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
