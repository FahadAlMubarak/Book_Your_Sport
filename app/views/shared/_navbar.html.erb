<div class="navbar d-flex navbar-expand-sm navbar-light">
  <div class="nav-content">
    <div class="nav-left col-8">
      <%= link_to "#", class: "navbar-brand d-flex gap-2" do %>
        <%= image_tag "logo-small.svg", class: "logo-nav", alt: "book your sport logo" %>
        <%= image_tag "logo-large.svg", class: "logo-nav", alt: "book your sport logo" %>
      <% end %>
    </div>
    <div class="nav-right gap-3 col-4">

      <% if user_signed_in? %>
        <div class="dropdown">
          <button class="fas fa-bars fa-2xl nav-link dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false"></button>
          <ul class="dropdown-menu w-50 justify-content-end" aria-labelledby="dropdownMenuButton">
            <li><a class="dropdown-item" href="/venues">See all venues</a></li>
            <li><a class="dropdown-item" href="#">Settings</a></li>
               <%  if current_user.owner == true %>
              <%= link_to 'Owner Dashboard', owner_dashboard_path, class: 'nav-link' %>
                <% else %>
                  <%= link_to 'User Dashboard', user_dashboard_path, class: 'nav-link' %>
                <% end %>
            <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "dropdown-item" %>
