

<div class="navbar d-flex navbar-expand-sm navbar-light">
  <div class="nav-content">
    <div class="nav-left col-7">
      <%= link_to root_path, class: "navbar-brand d-flex gap-2" do %>
        <%= image_tag "logo-small.svg", class: "logo-nav", alt: "book your sport logo" %>
        <%= image_tag "logo-large.svg", class: "logo-nav", alt: "book your sport logo" %>
      <% end %>
    </div>
    <div class="nav-right gap-3 col-5">
<div data-controller="sidenav">
  <i class="fa-solid fa-bars fa-xl" style="color: white;" data-action="click->sidenav#openMenu"></i>
  <div id="mySidenav" class="sidenav" data-sidenav-target="menu">
    <i class="fa-solid fa-xmark fa-xl close-icon" style="color: white;" data-action="click->sidenav#closeMenu"></i>
        <% if user_signed_in? %>
       <div class="sidenav-welcome d-flex align-items-center align-items-start">
      <div class="avatar d-flex align-items-center">
      </div>
      <%= image_tag asset_path("avatar_placeholder.webp"), class: "avatar", alt: "dropdown menu" %>
     <h5 class="mb-0 ml-2 mr-4">Hi <%= current_user.first_name.capitalize %>!</h5>

    </div>
         <%= link_to 'Home', root_path %>
         <%= link_to 'All Venues', venues_path %>
        <%  if current_user.owner == true %>
          <%= link_to 'Owner Dashboard', owner_dashboard_path, class: 'nav-link' %>
          <% else %>
        <%= link_to 'User Dashboard', user_dashboard_path, class: 'nav-link' %>
          <% end %>
        <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "dropdown-item" %>
      </div>
    </div>
          <% else %>
        <div class="avatar">
        <%= image_tag asset_path("avatar_placeholder.webp"), class: "avatar", alt: "dropdown menu" %>
        </div>
         <%= link_to 'Home', root_path %>
         <%= link_to 'All Venues', venues_path %>
            <div class="login-button">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
